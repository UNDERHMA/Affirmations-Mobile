<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photo.affirmations">

    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.photo.affirmations.AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <!-- Google admob - banner -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3438079706373343~8987076803"/>
        <activity android:name="com.photo.affirmations.activities.EditAffirmationsListActivity"></activity>
        <activity android:name="com.photo.affirmations.activities.EditAffirmationsActivity" />
        <activity
            android:name="com.photo.affirmations.activities.DemoActivity1"
            android:parentActivityName="com.photo.affirmations.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.photo.affirmations.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.photo.affirmations.activities.AddAffirmationsActivity"
            android:parentActivityName="com.photo.affirmations.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.photo.affirmations.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.photo.affirmations.activities.ViewAffirmationsActivity"
            android:parentActivityName="com.photo.affirmations.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.photo.affirmations.activities.MainActivity" />
        </activity>
        <activity android:name="com.photo.affirmations.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
 https://stackoverflow.com/questions/38200282/android-
        os-fileuriexposedexception-file-storage-emulated-0-test-txt-exposed
        Pkosta
        -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>